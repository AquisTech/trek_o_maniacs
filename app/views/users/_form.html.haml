= form_with(model: user, remote: true) do |f|
  - if user.errors.any?
    #error_explanation
      %h2= "#{pluralize(user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .row
    = f.label :email
    = f.email_field :email, id: :user_email
  .row
    = f.label :password
    = f.password_field :password, id: :user_password

  .row
    = f.label :password_confirmation
    = f.password_field :password_confirmation, id: :user_password_confirmation
  .row
    = f.label :password
    = f.password_field :password, id: :user_password

  .row
    = f.label :password_confirmation
    = f.password_field :password_confirmation, id: :user_password_confirmation
  .row
    = f.label :password
    = f.password_field :password, id: :user_password

  .row
    = f.label :password_confirmation
    = f.password_field :password_confirmation, id: :user_password_confirmation
  .row
    = f.label :remember_created_at
    .input-group
      = f.datetime_select :remember_created_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_remember_created_at, class: 'input-group-field small-2'
  .row
    = f.label :sign_in_count
    = f.number_field :sign_in_count, id: :user_sign_in_count
  .row
    = f.label :current_sign_in_at
    .input-group
      = f.datetime_select :current_sign_in_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_current_sign_in_at, class: 'input-group-field small-2'
  .row
    = f.label :last_sign_in_at
    .input-group
      = f.datetime_select :last_sign_in_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_last_sign_in_at, class: 'input-group-field small-2'
  .row
    = f.label :current_sign_in_ip
    = f.text_field :current_sign_in_ip, id: :user_current_sign_in_ip
  .row
    = f.label :last_sign_in_ip
    = f.text_field :last_sign_in_ip, id: :user_last_sign_in_ip
  .row
    = f.label :confirmation_token
    = f.text_field :confirmation_token, id: :user_confirmation_token
  .row
    = f.label :confirmed_at
    .input-group
      = f.datetime_select :confirmed_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_confirmed_at, class: 'input-group-field small-2'
  .row
    = f.label :confirmation_sent_at
    .input-group
      = f.datetime_select :confirmation_sent_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_confirmation_sent_at, class: 'input-group-field small-2'
  .row
    = f.label :unconfirmed_email
    = f. :unconfirmed_email, id: :user_unconfirmed_email
  .row
    = f.label :failed_attempts
    = f.number_field :failed_attempts, id: :user_failed_attempts
  .row
    = f.label :unlock_token
    = f.text_field :unlock_token, id: :user_unlock_token
  .row
    = f.label :locked_at
    .input-group
      = f.datetime_select :locked_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_locked_at, class: 'input-group-field small-2'
  - if user.persisted?
    .row
      = f.label :created_at
      .input-group
        = f.datetime_select :created_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_created_at, class: 'input-group-field small-2'
    .row
      = f.label :updated_at
      .input-group
        = f.datetime_select :updated_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :user_updated_at, class: 'input-group-field small-2'
  .row
    = f.submit user.new_record? ? 'Create' : 'Update', class: 'button success'
    = link_to 'Back', users_path, class: 'button warning'
