%h1
  Profiles
  = link_to 'Add New Profile', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_profile_path}

.table-scroll
  %table.striped.hover.table-striped.stack
    %thead
      %tr
        %th Id
        %th User
        %th First name
        %th Last name
        %th Membership started on
        %th Social links
        %th Created at
        %th Updated at
        %th Actions

    %tbody
      - @profiles.each do |profile|
        %tr
          %td= profile.id
          %td= profile.user.name
          %td= profile.first_name
          %td= profile.last_name
          %td= profile.membership_started_on
          %td= profile.social_links
          %td= profile.created_at
          %td= profile.updated_at
          %td
            .button-group
              = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: profile_path(profile)}
              = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_profile_path(profile)}
              = link_to 'Delete', profile, method: :delete, data: { confirm: 'Are you sure you want to delete this Profile?' }, class: 'button alert'
