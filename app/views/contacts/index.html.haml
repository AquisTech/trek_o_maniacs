%h1
  Contacts

.table-scroll
  %table.striped.hover.table-striped.stack
    %thead
      %tr
        %th Id
        %th Resource type
        %th Resource
        %th Purpose
        %th Name
        %th Number
        %th Created at
        %th Updated at
        %th Actions

    %tbody
      - @contacts.each do |contact|
        %tr
          %td= contact.id
          %td= contact.resource_type
          %td= contact.resource.name
          %td= contact.purpose
          %td= contact.name
          %td= contact.number
          %td= contact.created_at
          %td= contact.updated_at
          %td
            .button-group
              = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: contact_path(contact)}
              = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_contact_path(contact)}
              = link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure you want to delete this Contact?' }, class: 'button alert'
