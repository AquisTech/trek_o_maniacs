= nested_form_for venue do |f|
  - if venue.errors.any?
    #error_explanation
      %h2= "#{pluralize(venue.errors.count, "error")} prohibited this venue from being saved:"
      %ul
        - venue.errors.full_messages.each do |message|
          %li= message
  .row
    = f.label :name
    = f.text_field :name, id: :venue_name
  .row
    = f.label :purpose
    = f.select :purpose, ['Trek', 'Trail', 'Jungle Safari', 'Ghaat', 'Valley'], id: :venue_purpose
  .row
    = f.label :grade
    = f.select :grade, ['Easy', 'Medium', 'Difficult', 'Extreme'], id: :venue_grade
  .row
    = f.label :region
    = f.select :region, options_for_region, id: :venue_region
  .row
    = f.label :description
    = f.text_area :description, id: :venue_description
  .row
    = f.label :attractions
    = f.text_area :attractions, id: :venue_attractions
    %p.help-text Enter each attraction on new line
  .row
    = f.fields_for :routes
    = f.link_to_add 'Add more Route', :routes, class: 'button'
  - if venue.persisted?
    .row
      = f.label :created_at
      .input-group
        = f.datetime_select :created_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :venue_created_at, class: 'input-group-field small-2'
    .row
      = f.label :updated_at
      .input-group
        = f.datetime_select :updated_at, {order: [:day, :month, :year], date_separator: ' / '}, id: :venue_updated_at, class: 'input-group-field small-2'
  .row
    = f.submit venue.new_record? ? 'Create' : 'Update', class: 'button success'
    = link_to 'Back', venues_path, class: 'button warning'
