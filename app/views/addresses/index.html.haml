%h1
  Addresses
  = link_to 'Add New Address', 'javascript:void(0)', class: 'button primary float-right', data: {open: 'ajax-reveal', url: new_address_path}

.table-scroll
  %table.striped.hover.table-striped.stack
    %thead
      %tr
        %th Id
        %th User
        %th Purpose
        %th Address line 1
        %th Address line 2
        %th Landmark
        %th City
        %th State
        %th Country
        %th Pincode
        %th Created at
        %th Updated at
        %th Actions

    %tbody
      - @addresses.each do |address|
        %tr
          %td= address.id
          %td= address.user.name
          %td= address.purpose
          %td= address.address_line_1
          %td= address.address_line_2
          %td= address.landmark
          %td= address.city
          %td= address.state
          %td= address.country
          %td= address.pincode
          %td= address.created_at
          %td= address.updated_at
          %td
            .button-group
              = link_to 'Show', 'javascript:void(0)', class: 'button success', data: {open: 'ajax-reveal', url: address_path(address)}
              = link_to 'Edit', 'javascript:void(0)', class: 'button warning', data: {open: 'ajax-reveal', url: edit_address_path(address)}
              = link_to 'Delete', address, method: :delete, data: { confirm: 'Are you sure you want to delete this Address?' }, class: 'button alert'
